<script type="text/javascript">
var vahan_pageIndex = "1", vahan_totrecord = "0", vahan_rowrecord = "0";

function getrecords(id) {
	
	if (id == "prison_prev") {
		if (vahan_pageIndex >= "2") {
			vahan_pageIndex--;
		} else {
		}
		if ((vahan_pageIndex >= "1")) {

			ajaxRetrieveCall(vahan_pageIndex);

		} else {
		}
	} else {
		//alert(vahan_totrecord+">"+vahan_rowrecord);
		if (vahan_totrecord == (+vahan_rowrecord + 1)) {
			vahan_pageIndex++;

			ajaxRetrieveCall(vahan_pageIndex);

		}
		if (vahan_totrecord > (+vahan_rowrecord + 1)) {
			vahan_pageIndex++;

			ajaxRetrieveCall(vahan_pageIndex);

		} else {
		}
	}
}

function series_table(obj) {

	var obj = obj;
	var k = '<tbody class="table table-striped table-bordered table table-hover">'
	if (obj == "") {
		k += '<tr>';
		k += '<td colspan="11" class="text-center" >DATA NOT AVAILABLE</td>';
		k += '</tr>';

		k += '</tbody>';
		document.getElementById('series_table').innerHTML = k;

		$("#rowpintdiv").css("display", "none !important");

		$('#rowpintdiv').attr("style", "display:none");
		$("#prison_photo_nav-custom").css("display", "none");
		$("#rowpintdiv").css("display", "none");
	} else {
		$.each(obj, function(key, data) {
			k += '<tr>';
			k += '<td style="text-align:center;">' + data.rownumber+'</td>';
			k += '<td class="col-md-1 text-center">'
						+ data.date + '</td>';
			k += '<td class="col-md-1 text-center">'
							+ data.release_date + '</td>';
			k += '<td class="col-md-2 text-center">'
					+ data.patch_name + '</td>';
			k += '<td class="col-md-2 text-center">'
					+ data.patch_oem + '</td>';
			k += '<td class="col-md-2 text-center">'
						+ data.app_start_date + '</td>';
			k += '<td class="col-md-2 text-center">'
							+ data.app_close_date + '</td>';
			k += '<td class="col-md-2 text-center">'
								+ data.compliance + '</td>';
								k+='<td class="col-md-1 text-center">'+data.inserted_date+'</td>';
			k += '</tr>';
			vahan_totrecord = data.Rcount;
			vahan_rowrecord = data.rownumber;
		});
		k += '</tbody>';
		document.getElementById('series_table').innerHTML = k;
		$('#passport_row_cnt').html(vahan_totrecord);
		$('#passport_row_totcnt').html(vahan_rowrecord);
		$("#prison_photo_nav-custom").css("display", "block");
		$("#rowpintdiv").css("display", "block");
	}
}
	var series_no = "tbl_7_4", series_date = "",release_date="",patch_name="",patch_oem="",app_start_date="",app_close_date,compliance="",from_date = "", to_date = "";
	$("#clr").click(function() {
		clear();
	});
	function get_input(){
		
	}
	$(document)
			.ready(
					function() {
						$('#modal-id')
								.keyup(
										function() {
											series_date = $('#seriesDate')
													.val();
											patch_name = $('#patchName').val();
											patch_oem = $('#patchOEM').val();
											compliance = $('#Compliance')
													.val();
											release_date = $('#releaseDate').val();
											app_start_date = $('#appStartDate').val();
											app_close_date = $('#appCloseDate').val();									
										

											if (patch_name != ''
													&& patch_oem != ''
														&& compliance != ''
															&& release_date != ''
																&& app_start_date != ''
																	&& app_close_date != '') {
												document.getElementById("save").disabled = false;
												
											}else{
												document.getElementById("save").disabled = true;
											}
										});
					});

	function clear() {
		$('#patchName').val('');
		$('#patchOEM').val('');
		$('#Compliance').val('');
	}
	$("#save").click(function() {
		clear();
		var x = document.getElementById("myModal");
		$.ajax({
			type : "post",
			url : path + "/Series_save",
			async : false,
			data : {
				table_name : series_no,
				series_date : series_date,
				patch_name : patch_name,
				patch_oem : patch_oem,
				compliance : compliance,
				release_date : release_date,
				app_start_date : app_start_date,
				app_close_date : app_close_date
			},

			success : function(data) {
				var status = data.trim();
				if(status=="SUCCESS"){
					$("#btn_click").click();
					location.reload(true);	
				}else{
					alert("Error !!!");
					location.reload(true);
				}

			},
			error : function(xhr, ajaxOptions, thrownError) {
				bootbox.alert("err" + xhr);
			},
			complete : function() {

			}
		});
		return false;
	});

	$(document).ready(function() {
		var currentDate = new Date();

		$('#seriesDate').datepicker({
			format : 'mm/dd/yy',
